<!--miniprogram/pages/myPage/myComments/myComments.wxml-->
<view class="myPage">
  <button style="background-color: #fed32e; width: 100%; height: 300rpx">
    <view class="avatar-view">
      <view class="overlay" style="margin-left: auto; margin-right: auto"></view>
      <view class="myRate">{{myRate}}</view>
      <image class="myComment-avatar" src="{{avatarUrl}}" mode="aspectFit">
      </image>
    </view>
    <view class="myPage-nickname">{{nickName}}</view>
  </button>
</view>
<view class="myComments" style="display: block; box-sizing: border-box; height: 70rpx">我收到的所有评价</view>
<view class="frame comment" wx:for="{{evaluation_array}}">
  <view class="firstline">
    <view class="comment-serviceRate" wx:if="{{type == 0}}">对方打分：</view>
    <view class="comment-serviceRate" wx:if="{{type == 1}}">对方打分：{{item.customer_evaluation}}</view>
    <view class="comment-serviceRate" wx:if="{{type == 2}}">对方打分: {{item.maintain_evaluation}}</view>
  </view>
  <view class="comment-orderId">订单号：{{item.order_id}}</view>
  <view class="lastline">
    <view class="comment-time">评价时间：</view>
    <view class="frame goto-comment" bindtap="goto_evaluationDetail">评价详情</view>
  </view>
</view>