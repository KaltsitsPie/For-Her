/* miniprogram/pages/myPage/myComments/myComments.wxss */

page{height:100%}

.myPage {
  margin-top: 0;
  width: 100%;
  height: 25%;
  background-color: #fed32e;
}

.scbg {
  background-color: #FFFFFF 10000%;
  width: 100%;
  height: 75%;
  left: 0rpx;
  right: 0rpx;
  top: 25%;
  position: absolute;
}

.myComment-avatar {
  height: 190rpx;
  width: 190rpx;
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.4);
  border-radius: 50%;
}

.myRate {
  font-size: 50rpx;
  position: absolute;
  width: 79rpx;
  left: 45%;
  text-align: center;
  margin-top:100rpx;
  color: #C9F4C4;
  
}
.overlay {
  position: absolute;
  left: 37.4%;
  height: 190rpx;
  width: 190rpx;
  border-radius: 50%;
  opacity: 0.2;
  background-color: rgba(0,0,0,.8);
}

.myPage-nickname {
  margin-top: 15rpx;
  align-content: center;
  font-size: 38rpx;
  font-weight: normal;
  opacity: 0.6;
}

.myComments {
  margin-bottom: 4%;
  width: 100%;
  opacity: 0.5;
  text-align: center;
  line-height: 70rpx;
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(255, 255, 255, 100);
}

.comment {
  margin-top: 5%;
  margin-left: 5%;
  margin-right: 5%;
  height: 290rpx;
}

.firstline {
  display: flex;
  margin-top: 5%;
}

.comment-serviceRate {
  flex: none;
  margin-left: 5%;
  width: 36%;
  font-size: 38rpx;
  font-weight: bold;
  color: #d4b63c;
}

.comment-orderId {
  flex: 1;
  width: 50%;
}

.lastline {
  margin-top: 5%;
  margin-left: 5%;
  display: flex;
}

.comment-time {
  margin-top: 5%;
  margin-left: 5%;
}

.goto-comment {
  background-color: #fed32e;
  width: 180rpx;
  text-align:center;
  line-height: 70rpx;
  margin-right: 3%;
}