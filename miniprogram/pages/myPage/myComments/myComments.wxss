/* miniprogram/pages/myPage/myComments/myComments.wxss */

.myPage {
  margin-top: 0;
  width: 100%;
  height: 300rpx;
  background-color: #fed32e;
}

.myComment-avatar {
  height: 190rpx;
  width: 190rpx;
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.4);
  border-radius: 50%;
}

.myRate {
  font-size: 42rpx;
  position: absolute;
  left: 46%;
  margin-top: 130rpx;
  color: #fed32e;
}

.myPage-nickname {
  margin-top: 15rpx;
  align-content: center;
  font-size: 38rpx;
  font-weight: normal;
  opacity: 0.6;
}

.myComments {
  margin-bottom: 4%;
  width: 100%;
  opacity: 0.5;
  text-align: center;
  line-height: 70rpx;
  box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(255, 255, 255, 100);
}

.comment {
  margin-left: 5%;
  margin-right: 5%;
  height: 240rpx;
}

.firstline {
  display: flex;
  margin-top: 4%;
}

.comment-serviceType {
  flex: none;
  margin-left: 4%;
  width: 46%;
}

.comment-number {
  flex: 1;
  display: block;
  box-sizing: border-box;
}

.comment-serviceTime {
  margin-top: 2%;
  margin-left: 4%;
}

.lastline {
  margin-top: 2%;
  margin-left: 4%;
  display: flex;
}