<!--pages/myPage/complaint_user/complaint_user.wxml-->
<view style="text-align:center">
  <image src="cloud://for-her-3gaft6e9c1774eb8.666f-for-her-3gaft6e9c1774eb8-1305448068/images/complaint.png" mode="aspectFit" style="height: 296rpx; width: 640rpx"></image>
</view>
<view class="frame orderNumber-frame">
  <view class="appealDetail-text">订单编号</view>
  <view class="orderNumber-number">{{order_id}}</view>
</view>
<view class="frame appealType-frame">
  <view class="appealDetail-text">申诉类型</view>
  <view>
    <view class="complaint-type">{{array[complaint_type]}}</view>
  </view>
</view>
<view class="frame problem-frame">
  <view class="firstline">
    <view class="appealDetail-text">问题描述</view>
  </view>
  <textarea name="problemArea" id="problemArea" cols="20" rows="10"
    style="position: absolute; left: 35rpx; top:25%; width: 85%; height: 220rpx;font-size:29rpx; opacity:0.7;">{{text}}</textarea>
</view>
<view class="frame contactNumber-frame">
  <view class="appealDetail-text">联系电话</view>
  <view class="contactNumber-number">{{phone}}</view>
</view>
