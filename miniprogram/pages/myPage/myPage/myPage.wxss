/* pages/myPage/myPage/myPage.wxss */

.myPage {
  margin-top: 0;
  width: 100%;
  height: 300rpx;
  background-color: #fed32e;
}

.myPage-avator {
  height: 170rpx;
  width: 170rpx;
  box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.4);
  border-radius: 50%;
}

.myPage-nickname {
  margin-top: 15rpx;
  align-content: center;
  font-size: 38rpx;
  font-weight: normal;
  opacity: 0.6;
}

.function {
  margin-top: 2%;
  background-color: white;
  display: flex;
  flex-direction: row;
}

.function-name {
  width: 30%;
  margin-left: 5%;
  line-height: 120rpx;
  position: relative;
  font-size: 35rpx;
}

.function-arrow {
  position: relative;
  height: 40rpx;
  width: 40rpx;
  margin-top: 5%;
  margin-left: 55%
}