/* pages/orderPages/customerOrder/customerOrder.wxss */
.toprow{
  background-color: white;
  width: 100%;
  height: 72.9rpx;
  height: 6%;
  position: fixed;
  top: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  }
  
  .toptab{
  width: 187.5rpx;
  height: 72.9rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  }
  
  .toptabText{
    font-size: 25rpx;
    color: #000000 65%;
  }

  .model{
    position: absolute;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 999;
    opacity: 0.5;
    top: 0;
    left:0;
  }
  
  .modalDlg{
    width: 70%;
    position: fixed;
    top:350rpx;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .windowRow{
    display: flex;
    flex-direction: row;
    text-align: center;
    align-content: center;
    justify-content: space-between;
    height: 120rpx;
    width: 100%;
  }
  
  .back{
    text-align: center;
    color: #666;
    font-size: 25rpx;
    margin-top: 30rpx;
    margin-right: 30rpx;
    opacity: 0.5;
  }
  
  .userTitle{
    font-size: 30rpx;
    width: 80%;
    text-align: center;
    color: #101010;
    margin-top: 60rpx;
    margin-left: 100rpx;
  }
  
  .wishName{
    width: 100%;
    justify-content: center;
    flex-direction: row;
    display: flex;
    margin-bottom: 30rpx;
  }
  
  .wish_put{
    width: 80%;
    border: 1px solid;
    border-radius: 10rpx;
    padding-left: 10rpx;
    opacity: 0.3;
  }
  
  .wishbnt{
    width: 100%;
    font-size: 30rpx;
    margin-bottom: 30rpx;
  }
  
  
  .wishbnt_bt{
    width: 30%;
    background-color: #FED32E;
    color: #101010;
    font-size: 30rpx;
    border: 0;
  }

  .scbg {
    background-color: #FFFFFF 10000%;
    width: 100%;
    height: 94%;
    left: 0rpx;
    right: 0rpx;
    top: 6%;
    position: absolute;
  }
  
  .noOrderPrompt{
    height: 100%;
    width: 100%;
    display: flex;
    text-align: center;
    align-items: center;
    justify-content: center;
    color: gray;
    font-size: 40rpx;
    font-family: SourceHanSansSC-regular;
  }
  
  .box {
    margin-left: 33.3rpx;
    margin-right: 33.3rpx;
    margin-top: 3%;
    border-radius: 33.3rpx;
    box-shadow: 0rpx 2.1rpx 8.4rpx 0rpx rgba(0, 0, 0, 0.4);
    border: 2.1rpx solid rgba(255, 255, 255, 100);
  }
  
  .contentBlock{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 3%;
    margin-top: 2%
  }

  .repairman{
    margin-left: 33.3rpx;
    width: 100%;
    color: rgba(89, 155, 230, 100);
    font-size: 27rpx;
    text-align: left;
    font-family: SourceHanSansSC-bold;
    font-weight: bold;
    display: inline-flex;
  }

  .repairmanFlex{
    text-decoration-line: underline;
  }
  
  .buttonBlock{
    display: flex;
    margin-top: 1.5%;
    justify-content: flex-end;
    width: 100%;
  }
  
  .infoTextLeft {
    margin-left: 33.3rpx;
    margin-top: 3%;
    color: rgba(16, 16, 16, 100);
    font-size: 29rpx;
    font-family: SourceHanSansSC-regular;
  }
  
  .infoTextRight {
    margin-right: 33.3rpx;
    margin-top: 3%;
    color: rgba(16, 16, 16, 100);
    font-size: 29rpx;
    font-family: SourceHanSansSC-regular;
  }
  
  .orderStatement {
    margin-top: 3%;
    margin-right: 40rpx;
    font-size: 29.2rpx;
    font-weight: bold;
    text-align: right;
    justify-content: flex-end;
    font-family: SourceHanSansSC-bold;
  }
  
  .optionalButton1 {
    margin-right: 33.3rpx;
    width: 166.7rpx;
    height: 62.5rpx;
    border-radius: 20.8rpx;
    background-color: rgba(243, 48, 48, 100);
    color: rgba(16, 16, 16, 100);
    font-size: 29.2rpx;
    display: flex;
    align-items: center;
    text-align: right;
    justify-content: center;
    box-shadow: 0rpx 2.1rpx 8.4rpx 0rpx rgba(0, 0, 0, 0.4);
    font-family: Roboto;
  }
  
  .optionalButton2 {
    margin-right: 33.3rpx;
    width: 166.7rpx;
    height: 62.5rpx;
    border-radius: 20.8rpx;
    background-color: #FED32E;
    color: rgba(16, 16, 16, 100);
    font-size: 29.2rpx;
    display: flex;
    align-items: center;
    text-align: right;
    justify-content: center;
    box-shadow: 0rpx 2.1rpx 8.4rpx 0rpx rgba(0, 0, 0, 0.4);
    font-family: Roboto;
  }