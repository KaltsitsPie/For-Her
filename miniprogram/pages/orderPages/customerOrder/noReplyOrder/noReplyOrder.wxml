<!--pages/orderPages/customerOrder/noReplyOrder/noReplyOrder.wxml-->
<scroll-view class='scbg' scroll-y="true">
  <block wx:for="{{customerOrderList}}" wx:for-item="itemName" wx:for-index="id">
    <view class='box' bindtap="selectOrder">
      <view class='textBlock'>
        <text class='infoTextLeft'>
          服务类别：{{itemName.order_type}}
        </text>
        <text class='infoTextRight'>
          订单号：{{itemName._id}}
        </text>
        <text class='infoTextLeft'>
          服务时间：{{item.date}} {{item.dstart_time}}-{{item.end_time}}
        </text>
        <text class='orderStatement' wx:if="{{itemName.order_stat == 0}}">未接单</text>
        <text class='orderStatement' wx:elif="{{itemName.order_stat == 11}}">已过时</text>

        <text class='infoTextLeft'
          wx:if="{{itemName.order_stat == 3 || itemName.order_stat == 4 || itemName.order_stat == 5 || itemName.order_stat == 6 || itemName.order_stat == 7}}">实付款：{{itemName.price}}元</text>
      </view>
    </view>
  </block>

</scroll-view>

<include src="/pages/orderPages/customerOrder/toprow/toprow" />
