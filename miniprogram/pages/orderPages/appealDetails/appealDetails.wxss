page{height:100%;}

.appealDetail-text {
  margin-left: 5%;
  font-size: 35rpx;
  height: 100%;
  display:flex;
  align-items:center;
  justify-content:center;
}
.orderNumber-frame {
  margin-top: 2%;
  margin-left: 5%;
  margin-right: 5%;
  display: flex;
  height: 9%;
}
.orderNumber-number {
  margin:auto 0; float:right;
  text-align: right;
  font-size: 32rpx;
  margin-left: 10%;
  width: 60%;
  color: #555454;
  font-weight: bold;
}
.appealType-frame {
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 5%;
  display: flex;
  height: 9%;
}
.appealType-type {
  margin:auto 0; float:right;
