  .toprow{
    background-color: white;
    width: 100%;
    height: 72.9rpx;
    height: 6%;
    top: 2%;
    position: fixed;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    color: #000000 65%;
    opacity: 0.5;
    box-shadow: 0px 2px 5px 0px rgba(0, 0, 0, 0.4);
    font-family: Roboto;
    border: 1px solid rgba(255, 255, 255, 100);
  }

  .scbg {
    background-color: #FFFFFF 10000%;
    width: 100%;
    height: 91%;
    left: 0rpx;
    right: 0rpx;
    top: 9%;
    position: absolute;
  }
  
  .box {
    margin-left: 4%;
    margin-right: 4%;
    margin-top: 3%;
    border-radius: 33.3rpx;
    box-shadow: 0rpx 2.1rpx 8.4rpx 0rpx rgba(0, 0, 0, 0.4);
    border: 2.1rpx solid rgba(255, 255, 255, 100);
  }
  
  .contentBlock{
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 3%;
    margin-top: 2%
  }

  .distance{
    margin-top: 3%;
    color: rgba(89, 155, 230, 100);
    font-size: 29rpx;
    font-family: SourceHanSansSC-bold;
    font-weight: bold;
    margin-left: 33.3rpx;
  }

  .customerFix{
    text-decoration-line: underline;
    text-align: flex-end;
    margin-top: 3%;
    margin-right: 4%;
    color: rgba(89, 155, 230, 100);
    font-size: 29rpx;
    font-family: SourceHanSansSC-bold;
    font-weight: bold;
  }
  
  .infoTextLeft {
    margin-left: 33.3rpx;
    margin-top: 3%;
    color: rgba(16, 16, 16, 100);
    font-size: 29rpx;
    font-family: SourceHanSansSC-regular;
  }
  
  .infoTextRight {
    margin-right: 33.3rpx;
    margin-left: 33.3rpx;
    margin-top: 3%;
    color: rgba(16, 16, 16, 100);
    font-size: 29rpx;
    font-family: SourceHanSansSC-regular;
  }
  
  .takeOrderButton {
    margin-right: 33.3rpx;
    margin-top: 2%;
    width: 166.7rpx;
    height: 62.5rpx;
    border-radius: 20.8rpx;
    background-color: #FED32E;
    color: rgba(16, 16, 16, 100);
    font-size: 29.2rpx;
    display: flex;
    align-items: center;
    text-align: center;
    justify-content: flex-end;
    box-shadow: 0rpx 2.1rpx 8.4rpx 0rpx rgba(0, 0, 0, 0.4);
    font-family: Roboto;
  }