/* pages/orderPages/facialRecognition/facialRecognition.wxss */
page{
  background: #000000;
  width: 100%;
  height: 100%;
}

.recognitionBox{
  width: 450rpx;
  height: 450rpx;
  margin-left: 150rpx;
  margin-top: 20%;
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  border: 2.1rpx solid rgba(187, 187, 187, 100);
  border-radius: 500px;
}

.prompt{
  margin-top: 10%;
  height: 98rpx;
  color: rgba(255, 255, 255, 100);
  font-size: 35rpx;
  font-weight: bold;
  display: flex;
  text-align: left;
  align-items: center;
  justify-content: center;
  font-family: SourceHanSansSC-regular;
}

.takePhoto{
  width: 50%;
  height: 100rpx;
  margin-top: 10%;
  margin-left: 23%;
  border-radius: 20.8rpx;
  background-color: #FED32E;
  color: rgba(16, 16, 16, 100);
  font-size: 50rpx;
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
  box-shadow: 0rpx 2.1rpx 8.4rpx 0rpx rgba(0, 0, 0, 0.4);
  font-family: Roboto;
}